{
  "compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"src/*": ["src/*"],
			"utils/*": ["src/utils/*"]
		},
		"rootDir": "src",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES6"],
		"declarationDir": "dist",
		"declarationMap": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
		"emitDeclarationOnly": true,
		"allowJs": true,
		"declaration": true,
		"stripInternal": true,
		"outDir": "dist",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*.ts"],
	"tsc-alias": {
    "verbose": true,
  }
}
